[MASTER]
ignore=tests
load-plugins=pylint_ml_smells

[MESSAGES CONTROL]
disable=missing-docstring,invalid-name,too-few-public-methods,fixme, import-error
enable=C9001

[FORMAT]
max-line-length=100

[DESIGN]
max-args=6
max-locals=20
max-branches=15
max-statements=50

[REPORTS]
output-format=colorized

[TYPECHECK]
generated-members=numpy.*,torch.*

[SIMILARITIES]
min-similarity-lines=8

[LOGGING]
logging-modules=logging

[VARIABLES]
additional-builtins=np,pd

